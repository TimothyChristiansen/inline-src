{
    "compilerOptions": {
      "allowImportingTsExtensions": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./dist/src",
      "rootDir": "./src",
      "declarationDir": "./dist/src",
      "module": "esnext",
      "noEmit": false,
      "noEmitOnError": true,
      "strict": true,
      "target": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
  }